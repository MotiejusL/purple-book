<header class="logged-out-header">
  <div class="logged-out-menubar">
    <div class="row">
      <div class="logo column-7">
        <h1 class="fb-logo">Purplebook</h1>
      </div>
      <div class="login column-5">
        <%= form_tag("/logincheck", method: "get") do %>
        <div class="login-email column-5">
          <div class="login-email-wrapper">
            <%= label_tag(:email, "Email or Phone") %>
            <%= text_field_tag(:email) %>
          </div>
        </div>
        <div class="login-password column-5">
          <div class="login-password-wrapper">
            <%= label_tag(:password, "Password") %>
            <%= password_field_tag(:password) %>
          </div>
        </div>
        <div class="login-submit column-2">
          <%= submit_tag("Log in") %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
<div class="login-main-container-gradient">
  <div class="login-main-container">
    <div class="row">
      <div class="people-share-image column-7">
        <h3>Purplebook helps you connect and share with the people in your life.</h3>
        <%= image_tag("share-people.png") %>
      </div>
      <div class="signup column-5">
        <h1>Create an account</h1>
        <h4>It's free and always will be</h4>
        <%= form_tag("/users", method: "post") do %>
        <%= text_field_tag(:firstname, nil,  placeholder: "First name") %>
        <%= text_field_tag(:lastname, nil, placeholder: "Surname") %>
        <%= text_field_tag(:email, nil, placeholder: "Email address") %>
        <%= password_field_tag(:password, nil, placeholder: "New password") %>
        <div class="inform-text">Birthday</div>
        <%= select_tag("day", raw("<option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option><option>11</option><option>12</option><option>13</option><option>14</option><option>15</option><option>16</option><option>17</option><option>18</option><option>19</option><option>20</option><option>21</option><option>22</option><option>23</option><option>24</option><option>25</option><option>26</option><option>27</option><option>28</option><option>29</option><option>30</option><option>31</option>")) %>
        <%= select_tag("month", raw("<option>Jan</option><option>Feb</option><option>Mar</option><option>Apr</option><option>May</option><option>Jun</option><option>Jul</option><option>Aug</option><option>Sept</option><option>Oct</option><option>Nov</option><option>Dec</option>")) %>
        <%= select_tag("year", raw("<option>2009</option><option>2008</option><option>2007</option><option>2006</option><option>2005</option><option>2004</option><option>2003</option><option>2002</option><option>2001</option><option>2000</option><option>1999</option><option>1998</option><option>1997</option><option>1996</option><option>1995</option><option>1994</option><option>1993</option><option>1992</option><option>1991</option><option>1990</option><option>1989</option><option>1988</option><option>1987</option><option>1986</option><option>1985</option><option>1984</option><option>1983</option><option>1982</option><option>1981</option><option>1980</option><option>1979</option>")) %>
        <div class="inform-text">Gender</div>
        <%= radio_button_tag("gender", "male", true, class: "radio-button") %>
        <%= label_tag("gender_male", "Male", class: "radio-button-text") %>
        <%= radio_button_tag("gender", "female", false, class: "radio-button")%>
        <%= label_tag("gender_female", "Female", class: "radio-button-text") %>
        <div class="form-small-text">By clicking Sign Up, you agree to our Terms. Learn how we collect, use and share your data in our Data Policy and how we use cookies and similar technology in our Cookie Policy. You may receive SMS notifications from us and can opt out at any time.</div>
        <%= submit_tag("Sign up", class: "confirm") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="logged-out-footer">
  <div class="logged-out-footer-container">
    <div class="logged-out-footer-languages">
      <ul>
        <li><a href="#">English</a></li>
        <li><a href="#">Lietuviu</a></li>
      </ul>
    </div>
    <div class="logged-out-footer-divider"></div>
    <div class="logged-out-footer-links">
      <ul>
        <li><%= link_to("Sign up", root_path) %></li>
        <li><%= link_to("Log in", root_path) %></li>
      </ul>
    </div>
    <div id="purple-book">
      <span>Purplebook &copy; 2019</span>
    </div>
  </div>
</div>
